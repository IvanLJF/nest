<assembly>
    <id>repository</id>

    <formats>
        <format>dir</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
	
    <moduleSets>
        <moduleSet>
			<excludes>
				<exclude>org.esa.nest:nest-bootstrap</exclude>
				<exclude>org.esa.nest.maven:maven-nest-dataio-archetype</exclude>
				<exclude>org.esa.nest.maven:maven-nest-gpf-archetype</exclude>
				
                <exclude>com.bc.ceres:ceres-launcher</exclude>
            </excludes>
			<sources>
		        <includeModuleDirectory>false</includeModuleDirectory>
		        <fileSets>
		          <fileSet>
					<directory>src/main/resources</directory>
		            <outputDirectory>repository/${artifact.artifactId}-${artifact.version}</outputDirectory>
		            <includes>
		              <include>module.xml</include>
		            </includes>
		          </fileSet>
		        </fileSets>
		    </sources>

            <binaries>
                <outputDirectory>repository/${artifact.artifactId}-${artifact.version}</outputDirectory>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>

    </moduleSets>

</assembly>